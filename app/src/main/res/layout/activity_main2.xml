<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"


    tools:context="com.example.root.myapplication1.Main2Activity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="102dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:text="Name"
        android:layout_marginLeft="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_toStartOf="@+id/button" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="0dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="45dp"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/editText6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="102dp"
        android:layout_height="39dp"
        android:text="Email Id"
        android:textColor="@color/black"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="121dp"
        android:layout_alignBaseline="@+id/editText6"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Email Id"
        android:layout_marginLeft="0dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="121dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/editText7"
        android:layout_alignEnd="@+id/editText5"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No."
        android:textColor="@color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="198dp"
        android:layout_alignBaseline="@+id/editText7"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Phone No."
        android:layout_marginLeft="0dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="198dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/editText9"
        android:layout_alignEnd="@+id/editText6"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Radius"

        android:textColor="@color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="279dp"
        android:layout_alignTop="@+id/editText9"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignBottom="@+id/editText9" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="0dp"
        android:inputType="textPersonName"
        android:text=""

        android:hint="Enter Home Radius in metres"
        tools:layout_editor_absoluteY="279dp"
        tools:layout_editor_absoluteX="132dp"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/editText7"
        android:layout_toEndOf="@+id/textView9" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Home Location"
        tools:layout_editor_absoluteY="365dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/grey"

         />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Enter Details"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
</RelativeLayout>
